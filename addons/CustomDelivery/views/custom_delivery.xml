<odoo>
    <record id="view_delivery_wizard_form" model="ir.ui.view">
        <field name="name">delivery.wizard.form</field>
        <field name="model">delivery.wizard</field>
        <field name="arch" type="xml">
            <form string="Iniciar Proceso de Entrega">
                <div>
                    <span class="o_form_label">Mandar Equipo(s) al Proceso de Entrega </span>
                </div>
                <div>
                    <strong>Nota: solo se entregar√°n los equipos instalados.</strong>
                </div>
                <footer>
                    <button string="Entregar equipo" type="object" name="action_instalar_equipo" class="btn-primary"/>
                    <button string="Entregar todos los equipos" type="object" name="action_instalar_todos" class="btn-primary"/>
                    <button string="Cancelar" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>