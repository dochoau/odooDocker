<odoo>
    <record id="view_delivery_confirm_form" model="ir.ui.view">
        <field name="name">delivery.confirmation.form</field>
        <field name="model">delivery.confirmation</field>
        <field name="arch" type="xml">
            <form string="Confirmación">
                <group>
                    <div>
                        <span class="o_form_label">¿Está seguro que desea realizar esta acción?</span>
                    </div>
                    <div>
                        <strong>Nota: solo se entregarán los equipos instalados.</strong>
                    </div>
                </group>
                <footer>
                    <button name="action_confirm" type="object" string="Sí" class="btn-primary"/>
                    <button string="Cancelar" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>