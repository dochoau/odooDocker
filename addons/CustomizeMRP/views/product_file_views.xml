<odoo>
  <record id="view_form_product_design_file" model="ir.ui.view">
    <field name="name">product.file.design.form</field>
    <field name="model">product.file.design</field>
    <field name="arch" type="xml">
      <form string="Archivos de Diseño">
        <group>
          <field name="project_id" readonly="1"/>
          <field name="product_id" readonly="1"/>
          <field name="production_id" readonly="1"/>
        </group>

        <group>
          <group string="Corte (DXF)">
            <field name="dxf_file" filename="dxf_filename"/>
            <button name="action_upload_dxf"
                    string="Subir"
                    type="object"
                    class="btn-primary"
                    />                 
            <button name="action_download_dxf"
                    string="Descargar"
                    type="object"
                    class="btn-secondary"
                    invisible="not dxf_loaded"/>
          </group>

          <group string="Lista de Materiales">
            <field name="bom_file" filename="bom_filename"/>
            <button name="action_upload_bom" 
                    string="Subir" 
                    type="object" 
                    class="btn-primary"/>
            <button name="action_download_bom" 
                    string="Descargar ZIP" 
                    type="object" 
                    class="btn-secondary" 
                    invisible="not bom_loaded"/>
          </group>

          <group string="Instructivo de Fabricación">
            <field name="instruction_file" filename="instruction_filename"/>
            <button name="action_upload_instruction" 
                    string="Subir" 
                    type="object" 
                    class="btn-primary"/>
            <button name="action_download_instruction" 
                    string="Descargar ZIP" 
                    type="object" 
                    class="btn-secondary" 
                    invisible="not instructions_loaded"/>
          </group>
        </group>
      </form>
    </field>
  </record>
</odoo>
