<!-- views/project_plan_upload_wizard.xml -->
<odoo>
  <record id="view_project_plan_upload_wizard" model="ir.ui.view">
    <field name="name">project.plan.upload.wizard.form</field>
    <field name="model">project.plan.upload.wizard</field>
    <field name="arch" type="xml">
      <form string="Cargar Plano del Proyecto">
        <group>
          <field name="project_id" readonly="1"/>
          <field name="pdf_file" filename="filename_arch"/>
        </group>
        <footer>
          <button name="action_upload_plan" type="object" string="Subir" class="btn-primary"/>
          <button string="Cancelar" class="btn-secondary" special="cancel"/>
        </footer>
      </form>
    </field>
  </record>
</odoo>
