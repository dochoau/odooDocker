<!-- Vista del Wizard -->
<record id="view_project_attachment_wizard" model="ir.ui.view">
    <field name="name">project.attachment.wizard.form</field>
    <field name="model">project.attachment.wizard</field>
    <field name="arch" type="xml">
        <form string="Subir Archivos">
            <group>
                <field name="project_id" readonly="1"/>
                <field name="sale_order_id"/>
                <field name="file_ids">
                    <tree editable="bottom">
                        <field name="name"/>
                        <field name="file"/>
                        <field name="filename"/>
                    </tree>
                </field>
            </group>
            <footer>
                <button string="Subir" type="object" name="action_upload_files" class="btn-primary"/>
                <button string="Cancelar" special="cancel"/>
            </footer>
        </form>
    </field>
</record>

<!-- AcciÃ³n para abrir el wizard -->
<record id="action_open_attachment_wizard" model="ir.actions.act_window">
    <field name="name">Subir Archivos</field>
    <field name="res_model">project.attachment.wizard</field>
    <field name="view_mode">form</field>
    <field name="target">new</field>
    <field name="context">{'default_project_id': active_id}</field>
</record>

