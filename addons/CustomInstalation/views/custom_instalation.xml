<odoo>
    <record id="view_installation_wizard_form" model="ir.ui.view">
        <field name="name">installation.wizard.form</field>
        <field name="model">installation.wizard</field>
        <field name="arch" type="xml">
            <form string="Iniciar Proceso de Instalación">
                <div>
                    <span class="o_form_label">Mandar Equipo(s) al Proceso de Instalación </span>
                </div>
                <div>
                    <strong>Nota: solo se instalarán los equipos terminados.</strong>
                </div>
                <footer>
                    <button string="Instalar equipo" type="object" name="action_instalar_equipo" class="btn-primary"/>
                    <button string="Instalar todos los equipos" type="object" name="action_instalar_todos" class="btn-primary"/>
                    <button string="Cancelar" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>